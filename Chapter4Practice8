package chapter4;

import java.util.Scanner;

public class PhoneBook {
	Scanner scanner = new Scanner(System.in);
	int capacity = 0;	//인원수
	Phone phone[];
	
	public PhoneBook() {
		System.out.print("인원수>>");
		capacity = scanner.nextInt();	//인원수를 입력한 값만큼으로
		phone = new Phone[capacity];
	}
	
	public static void main(String[] args) {
		PhoneBook phonebook = new PhoneBook();
		phonebook.save();	//저장할 함수 불러오기
		phonebook.search();	//검색할 함수 불러오기
	}
	
	public void save() {	//저장할 함수
		for(int i=0;i<phone.length;i++) {	//for문을 인원수만큼 반복
			System.out.print("이름과 전화번호(이름과 번호는 빈 칸없이 입력)>>");			
			String name = scanner.next();
			String tel = scanner.next();
			phone[i] = new Phone(name, tel);
		}
		System.out.println("저장되었습니다...");
	}
	
	public void search() {	//검색할 함수
		while (true) {
			System.out.print("검색할 이름>>");
			String name = scanner.next();
			if(name.equals("그만")) break;
			
			boolean check = false;
			for (int i = 0; i<phone.length; i++) {
				if(name.equals(phone[i].getName())) {
					System.out.println(name+"의 번호는 "+phone[i].getTel()+" 입니다.");
					check = true;
				}
			}
				if (check == false) System.out.println(name+" 이 없습니다.");
		}
	}
}

class Phone{
	String name;
	String tel;
	
	public Phone() {}
	public Phone(String name, String tel) {
		this.name = name;
		this.tel = tel;
	}
	String getName() {return name;}
	String getTel() {return tel;}	
}
